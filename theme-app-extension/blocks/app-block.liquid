{% schema %}
  {
    "name": "Add to wishlist button",
    "target": "section",
    "stylesheet": "wishlist-button.css",
    "javascript": "wishlist.js",
    "templates": ["product", "index"],
    "settings": [
        {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#000000"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text",
            "default": "#ffffff"
        },
        {
            "type": "text",
            "id": "content_before",
            "label": "Text before add to wishlist"
        },
        {
            "type": "text",
            "id": "content_after",
            "label": "Text after add to wishlist"
        },
        {
		"type": "range",
		"id" : "fonts",
		"label": "Font size",
		"min" : 5,
		"max" : 50,
		"step" : 1,
		"unit" : "px",
		"default": 13


	}
    ]
  }
{% endschema %}
